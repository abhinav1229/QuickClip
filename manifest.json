{
  "manifest_version": 3,
  "name": "QuickClip Local",
  "version": "1.1",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}